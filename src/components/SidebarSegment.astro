---   
   const { title, object } = Astro.props;  
---

<div>
    <h3 class='pb-3 px-4 font-semibold text-slate-900 dark:text-slate-200 md:px-8'>{title}</h3>
    <div class='text-gray-600 px-4 md:px-8'>
        <ul>      
            {
                object.map(({ name, href, label }: { name: string; href: string; label: string }) => (
                    <li>       
                        <a 
                            href={href}
                            class="block py-1 border-l pl-4 -ml-px border-slate-600 hover:border-slate-400 dark:hover:border-slate-500 text-slate-700 hover:text-slate-900 dark:text-slate-400 dark:hover:text-slate-300"
                            aria-label={label} 
                        >
                            {name}
                        </a>
                    </li> 
                ))
              }      
      </ul>
    </div>
</div>